<style>

    body {
      font-family: "Open Sans", sans-serif;
      height: 100vh;
      background: url(<%= image_url("bg.png") %>)  50% fixed;
      background-size: cover;
    }
</style>

<div class="wrapper">
   <%= form_for(resource, as: resource_name, url: user_session_path,:html => {:class => 'Login'}) do |f| %>
        <center><%=image_tag 'logo.png', width:"180px", style: "margin-bottom:15px"%></center>
        <%= f.email_field :email, required: false, autofocus: true,placeholder: "E Mail"%>
        <i class="fa fa-user"></i>
        <%= f.password_field :password, required: false,placeholder: "Password" %>
        <%= f.hidden_field :store_name, value: "#{@current_supplier.present? ? @current_supplier.slug : 'bundle'}"%>
        <i class="fa fa-key"></i>
        <div class="forgot">
        &nbsp;<%= link_to "forgot password?" , new_user_password_path%>
        </div>
        <div class="forgot">
        &nbsp;<%= link_to 'Do not have an account? Sign Up!', new_user_registration_path %>
        </div>
         <br>
        <%= f.submit "Sign In", :style => "margin-right: 230px",class: "btn btn-info" %>
      </p>
    <%end%>
</div>
