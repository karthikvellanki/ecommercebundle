<% flash.each do |type, message| %>
  <div class="alert <%= bootstrap_class_for(type) %> alert-dismissable fade in" style="margin-top:20px;">
    <button type="button" class="close" data-dismiss="alert" aria-hidden="true">&times;</button>
    <%= fa_icon_tag "info-sign" %> <%= message %>
  </div>
<% end %>
