<style>

    body {
      font-family: "Open Sans", sans-serif;
      height: 100vh;
      background: url(<%= image_url("bg.png") %>)  50% fixed;
      background-size: cover;
    }
</style>

<div class="row" style="text-align:center;">
<div class="col-sm-12">
  <center><%=image_tag 'logo.png', width:"200px"%></center>
  <br /><br />
  <p><%= flash[:message]%></p>
</div>
<div class="col-sm-12">
  <center>
    <% if params[:user].present? && params[:user][:is_supplier] == "true" %>
	  <%= form_for(resource, as: resource_name, url: registration_path(resource_name),:html => {:class => 'Login' ,multipart: "true" }) do |f| %>
		       <center></center>
	           <%= f.hidden_field :is_supplier, value: true %>
	            <div class="col-md-6">
	             <%= f.text_field :first_name, autofocus: true ,placeholder: "First name" %>
	             <i class="fa fa-user"></i>
	            </div>
	            <div class="col-md-6">
	             <%= f.text_field :last_name, autofocus: true ,placeholder: "Lastname" %>
	             <i class="fa fa-user"></i>
	            </div>
	            <div class="col-md-6">
	  	          <%= f.email_field :email, autofocus: true ,placeholder: "E Mail" %>
	              <i class="fa fa-user"></i>
	            </div>
	            <div class="col-md-6">
	  	          <%= f.text_field :mobile, autofocus: true ,placeholder: "Phone number" %>
	              <i class="fa fa-user"></i>
	            </div>
	            <div class="col-md-6">
	  	          <%= f.text_field :company, autofocus: true ,placeholder: "Company" %>
	              <i class="fa fa-user"></i>
	            </div>
	            <div class="col-md-6">
	  	          <%= f.text_field :location, autofocus: true ,placeholder: "Location" %>
	              <i class="fa fa-user"></i>
	            </div>
	            <div class="col-md-6">
	  	          <%= f.password_field :password, autofocus: true,placeholder: "Password" %>
	  	          <i class="fa fa-key"></i>
	            </div>
	            <div class="col-md-6">
	  	          <%= f.password_field :password_confirmation, autofocus: true ,placeholder: " Confirm Password" %>
	  	          <i class="fa fa-key"></i>
	            </div>
		          <%= f.submit "Sign Up", :style => "margin-right: 230px",class: "btn btn-info" %>
	              <div class="forgot">
		            &nbsp;<%= link_to 'Already have an account?',user_registration_path %>
		          </div>
		          <div class="clear"></div>
		<%end%>
	<% else %>
		<%= form_for(resource, as: resource_name, url: registration_path(resource_name),:html => {:class => 'Login' ,multipart: "true" }) do |f| %>
		       <center></center>
	           <%= f.hidden_field :is_supplier, value: false %>
	            <div class="col-md-12">
	             <%= f.text_field :first_name, autofocus: true ,placeholder: "Name" %>
	             <i class="fa fa-user"></i>
	            </div>
	            <div class="col-md-12">
	  	          <%= f.email_field :email, autofocus: true ,placeholder: "E Mail" %>
	              <i class="fa fa-user"></i>
	            </div>
	            <div class="col-md-12">
	  	          <%= f.password_field :password, autofocus: true,placeholder: "Password" %>
	  	          <i class="fa fa-key"></i>
	            </div>
	            <div class="col-md-12">
	  	          <%= f.password_field :password_confirmation, autofocus: true ,placeholder: " Confirm Password" %>
	  	          <i class="fa fa-key"></i>
	            </div>
		          <%= f.submit "Sign Up", :style => "margin-right: 230px",class: "btn btn-info" %>
	              <div class="forgot">
		            &nbsp;<%= link_to 'Already have an account?',user_registration_path %>
		          </div>
		          <div class="clear"></div>
		<%end%>
	<%end%>
  </center>
</div>
