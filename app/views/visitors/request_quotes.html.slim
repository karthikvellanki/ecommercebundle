  .flex-parent-1.hidden
    p.text-sze.flex-child-1 Add the products you require and your information in the fields below.
    p.text-sze.flex-child-1.hidden style="margin-bottom:20px;" Have any questions? Contact us at <a href="mailto:hello@orderbundle.com">hello@orderbundle.com</a> or call us at <a href="tel:4157429890">(415) 742-9890<a>

    .row
       .col-xs-12.col-sm-7
            #example2.hot2.handsontable.htRowHeaders.htColumnHeaders.requestSheet.mb40
       .col-xs-12.col-sm-5
            = form_for(@new_user, url: registration_path(@new_user),:html => {:class => 'Login-1' ,multipart: "true", style: "margin-top:0" }) do |f|
              = f.hidden_field :is_supplier, value: false
              = f.hidden_field :request_quote, value: '[]'
              .col-md-6.pb-2.pt-2
                = f.text_field :first_name ,placeholder: "First Name"
