<!DOCTYPE html>
<%= html_tag :lang => "en" do %>
  <head>
    <meta charset="utf-8">
    <%- if !provider.blank?-%>
      <title><%= [provider.name].compact.join(" - ") %></title>
    <%- else -%>
      <title><%= [@title, app_name].compact.join(" - ") %></title>
    <%- end -%>
    <%= csrf_meta_tags %>

    <!-- Ensure devices display responsive pages properly -->
    <meta name="viewport" content="width=device-width, initial-scale=1.0">

    <!-- Le HTML5 shim, for IE6-8 support of HTML elements -->
    <!--[if lt IE 9]>
      <script src="http://html5shim.googlecode.com/svn/trunk/html5.js" type="text/javascript"></script>
    <![endif]-->

    <!-- Le fonts -->
    <%= stylesheet_link_tag "https://fonts.googleapis.com/css?family=Poiret+One" %>
    <!-- Le styles -->
    <!-- <%= stylesheet_link_tag "application", :media => "all" %> -->
    <%= yield :styles %>
    <!-- Le javascript
    ================================================== -->
    <!-- Placed at the end of the document so the pages load faster -->
    <!-- <%= javascript_include_tag "application" %> -->
    <%= yield :javascript %>

    <script>
      <%- if Rails.env.production? -%>
        (function(i,s,o,g,r,a,m){i['GoogleAnalyticsObject']=r;i[r]=i[r]||function(){
        (i[r].q=i[r].q||[]).push(arguments)},i[r].l=1*new Date();a=s.createElement(o),
        m=s.getElementsByTagName(o)[0];a.async=1;a.src=g;m.parentNode.insertBefore(a,m)
        })(window,document,'script','//www.google-analytics.com/analytics.js','ga');
        ga('require', 'linkid');
        ga('create', 'UA-8369746-1', 'auto');
      <%- else -%>
        function ga() { console.log("Google Analytics"); }
      <%- end -%>
    </script>

    <!-- Le fav and touch icons -->
    <%- if !provider.blank?-%>
      <%= favicon_link_tag provider.image %>
    <%- else -%>
      <%= favicon_link_tag 'favicon.png' %>
    <%- end -%>
    <%# favicon_link_tag "apple-touch-icon.png", :rel => "apple-touch-icon" %>

    <%= yield :head %>
  </head>
  <body class="<% yield (:body_class) %>";>

    <div id="main" class="container-fluid" style="padding: 0px">
        <%= yield %>
    </div> <!-- /#main -->



  </body>
<% end %>
